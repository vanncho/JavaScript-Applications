{{> header}}
<section id="viewCreateAd" class="viewCreateAd">
    <h1 class="titleForm">Create new Advertisement</h1>
    <form action="#/create" id="formCreateAd" class="form" method="post">
        <div class="notempty">Title:</div>
        <div>
            <input type="text" name="title" required/>
        </div>
        <div class="notempty">Description:</div>
        <div>
            <textarea name="description" rows="10" required></textarea>
        </div>
        <div>Date Published:</div>
        <div>
            <div id="dateDisabled">{{datePublished}}</div>
        </div>
        <div class="notempty">Price:</div>
        <div>
            <input type="number" step="0.01" name="price" required/>
        </div>
        <div>Image:</div>
        <div>
            <input type="text" name="image"/>
        </div>
        <div><input type="submit" id="buttonCreateAd" value="Create"/></div>
    </form>
</section>
{{> footer}}